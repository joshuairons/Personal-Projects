def add(x, y):
    return x + y

def subtract(x, y):
    return x - y
    
def multiply(x, y):
    return x * y

def divide(x, y):
    if y != 0:
        return x / y
    else:
        print("Cannot divide by 0, please try again.")
        return None

choice = int(input("Enter choice between 1 and 4 here: "))

while choice < 1 or choice > 4:
    choice=int(input("Choice can only be from 1 to 4, please try again."))
else:
    x = int(input("Enter first number here: "))
    y = int(input("Enter second number here: "))
    
    if choice == 1:
        result = add(x, y)
    elif choice == 2:
        result = divide(x, y)
    elif choice == 3:
        result = subtract(x, y)
    elif choice == 4:
        result = multiply(x, y)

    if result is not None:
        print("Result:", result)
